{
  "manifest_version": 2,

  "name": "Kill Tabs",
  "description": "Kills Tabs that have been alive for too long.",
  "version": "1.0",

  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.gif",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
